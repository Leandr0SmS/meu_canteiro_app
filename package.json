{
  "name": "meu-canteiro-app",
  "version": "1.0.0",
  "description": "Canteiro Agroflorestal Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.meu-canteiro-app",
    "productName": "Meu Canteiro App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/**/*",
      "backend/**/*",
      "backend/python-embed/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/meu_canteiro_front_end/resources/images/tree-icon.jpg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
